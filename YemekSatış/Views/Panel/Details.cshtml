@model IEnumerable<YemekSatış.Models.DTO.DetailsListDTO>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">YEMEK DETAYI</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">

            <li class="active">Yemek Detay</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="white-box">
            <div align="right">
                <a id="btnYeniKayit">Yeni Kayıt</a>
            </div>
            <form class="form-horizontal form-material" id="frmsDetails">
                <input type="hidden" id="hdn_id" name="Id" />
                <div class="form-group">
                    <label class="col-sm-12">Yiyecek Detay</label>
                    <div class="col-sm-12">
                        <select class="form-control form-control-line" id="slc_food_id" name="AltKategoriID">
                            <option value="0">Kategori Seçin</option>
                            @foreach (var item in ViewBag.slc_SubCategories)
                            {
                                <option value="@item.food_id">@item.food_name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Başlık</label>
                    <div class="col-md-12">
                        <input type="text" id="txt_Details" name="Details1" placeholder="Yemek Detay" required class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="col-md-12">Adet</label>
                        <div class="col-md-12">
                            <input type="text" id="txt_SKU" name="SKU" placeholder="Adet" required class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-12">Tutar</label>
                        <div class="col-md-12">
                            <input type="text" id="txt_Price" name="Price" placeholder="Tutar" required class="form-control form-control-line">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-success" value="KAYDET" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="white-box">
            <table id="tblDetailsList" class="table table-bordered table-striped table-condensed flip-content">
                <thead class="flip-content">
                    <tr class="text-center">
                        <th class="text-center">#</th>
                        <th class="text-center">KATEGORİ</th>
                        <th class="text-center">BAŞLIK</th>
                        <th class="text-center">ADET</th>
                        <th class="text-center">TUTAR</th>
                        <th class="text-center">İŞLEMLER </th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @if (Model != null)
                    {
                        int sayac = 1;
                        foreach (var item in Model)
                        {
                    <tr data-id="@item.Id">
                        <td class="text-right bold">@(sayac++)</td>
                        <td> @item.KategoriName </td>
                        <td> @item.Details1 </td>
                        <td class="text-center"> @item.SKU </td>
                        <td class="text-right"> @item.Price </td>
                        <td class="text-center">
                            <a data-id="@item.Id" id="DetayDuzenle" href="javascript:;" title="Düzelt">
                                <i class="fa fa-edit"></i>
                            </a> &nbsp;&nbsp;&nbsp;
                            <a data-id="@item.Id" id="DetaySil" href="javascript:;" title="Sil">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/scripts/Detay.js"></script>

